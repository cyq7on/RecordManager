<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/ll"
        layout="@layout/include_navi" />
    <HorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </HorizontalScrollView>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/sw_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10">

        <com.evrencoskun.tableview.TableView
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:column_header_height="@dimen/cell_height"
            app:row_header_width="@dimen/row_header_width"
            app:selected_color="@color/header_line_color"
            app:unselected_color="@color/default_background_color"
            />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>